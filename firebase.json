{
  "hosting": {
    "target": "theabbie",
    "public": "public",
    "rewrites": [{
    "source": "/subscribe",
    "function": "subscribe"
    },{
    "source": "/send",
    "function": "send"
    },{
    "source": "/post",
    "function": "post"
    },{
    "source": "**/*.png",
    "function": "img"
    },{
    "source": "**",
    "function": "markov"
    }],
    "ignore": [
      "firebase.json",                                              "**/.*",
      "**/node_modules/**"
    ]
  }
}
